<?xml version="1.0" encoding="utf-8"?>
<com.Store.www.base.CustomRCCircularLayout.RCRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:round_corner="6dp"
    android:layout_marginLeft="@dimen/divider_10dp"
    android:layout_margin="@dimen/divider_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_15dp"
            android:paddingRight="@dimen/divider_15dp">

            <TextView
                android:id="@+id/tv_hint_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/textColorBlack" />

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_orders_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:textColor="@color/textColorBlack"
                android:gravity="center"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/divider_15dp"
            android:paddingRight="@dimen/divider_15dp"
            android:paddingTop="@dimen/divider_10dp"
            android:paddingBottom="@dimen/divider_10dp">

            <ImageView
                android:id="@+id/iv_orders_images"
                android:layout_width="@dimen/divider_80dp"
                android:layout_height="@dimen/divider_80dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_user_head_background"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_orders_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_orders_images"
                android:text=""
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:textColor="@color/buttombarText"/>

            <TextView
                android:id="@+id/tv_orders_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_orders_images"
                android:layout_below="@+id/tv_orders_number"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:textColor="@color/buttombarText"/>


            <TextView
                android:id="@+id/tv_orders_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_orders_name"
                android:layout_toRightOf="@+id/iv_orders_images"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/buttombarText"/>

            <TextView
                android:id="@+id/tv_orders_adders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_orders_phone"
                android:text=""
                android:layout_toRightOf="@+id/iv_orders_images"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="@dimen/divider_10dp"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/buttombarText"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:paddingLeft="@dimen/divider_15dp"
            android:paddingRight="@dimen/divider_15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vw_lines"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginTop="@dimen/drawablePadding_5dp"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/small_text_size"/>


            <TextView
                android:id="@+id/tv_pay_order"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center"
                android:textColor="@color/windowBackground"
                android:background="@drawable/shape_order_ok_background"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:text="@string/pay_order" />

            <TextView
                android:id="@+id/tv_cancel_order"
                style="@style/buttonInviteOrder"
                android:layout_toLeftOf="@+id/tv_pay_order"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_marginRight="@dimen/divider_10dp"
                android:text="@string/order_no"/>

        </RelativeLayout>


    </LinearLayout>


</com.Store.www.base.CustomRCCircularLayout.RCRelativeLayout>