<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground">

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xb_product"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:pointSelect="@drawable/shape_indicator_orange"
        app:pointNormal="@drawable/shape_indicator_white"
        app:AutoPlayTime="4000"
        app:isClipChildrenMode="true"
        app:clipChildrenLeftRightMargin="@dimen/divider_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </com.stx.xhb.xbanner.XBanner>

    <View
        android:id="@+id/vw_ten_height"
        style="@style/weight_10"
        app:layout_constraintTop_toBottomOf="@+id/xb_product"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:textSize="@dimen/tab_text_size"
        android:textColor="@color/textColorBlack"
        android:text="全部产品"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/vw_ten_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>