<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        style="@style/divider_horizontal2"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/divider_15dp"/>

    <TextView
        android:id="@+id/tv_scan_agent_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/textColorBlack"
        android:text="代理编号: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/divider_15dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_scan_agent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/textColorBlack"
        android:text="代理姓名: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scan_agent_number"
        android:layout_marginTop="@dimen/drawablePadding_5dp"
        android:layout_marginLeft="@dimen/divider_15dp" />


    <TextView
        android:id="@+id/tv_scan_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_smallbutton_block_normal"
        android:textSize="@dimen/medium_text_size"
        android:text="扫码详情"
        android:paddingLeft="@dimen/drawablePadding_5dp"
        android:paddingRight="@dimen/drawablePadding_5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/divider_15dp"
        android:layout_marginRight="@dimen/divider_15dp"
        android:visibility="gone"/>

    <View
        style="@style/divider_horizontal2"
        app:layout_constraintTop_toBottomOf="@+id/tv_scan_agent_name"
        android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>