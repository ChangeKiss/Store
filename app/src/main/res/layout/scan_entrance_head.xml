<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/placeholder_top"
    android:clipChildren="false"
    android:paddingBottom="@dimen/divider_15dp">

    <com.Store.www.base.ClearCircleView
        android:id="@+id/iv_scan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:circle_color="@color/windowBackground"
        app:ripple_duration="3000"
        app:circle_num="3"
        app:stroke_width="8dp"
        app:max_radius_multiple="2"
        android:layout_marginTop="@dimen/divider_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <EditText
        android:id="@+id/et_scan_input"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_scan_input_submit"
        app:layout_constraintHorizontal_weight="5"
        android:layout_marginTop="@dimen/divider_10dp"
        android:background="@drawable/shape_edit_text_background"
        android:hint="请输入商品唯一码"
        android:inputType="number"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/medium_text_size"
        android:paddingLeft="@dimen/divider_15dp"
        android:paddingRight="@dimen/divider_10dp"
        android:layout_marginLeft="@dimen/divider_15dp"
        android:layout_marginStart="@dimen/divider_15dp" />

    <TextView
        android:id="@+id/tv_scan_input_submit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_scan"
        app:layout_constraintLeft_toRightOf="@+id/et_scan_input"
        android:textColor="@color/windowBackground"
        android:textSize="@dimen/large_text_size"
        android:text="@string/plus_adjust_cart"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/divider_15dp"
        android:enabled="false"
        android:layout_marginLeft="@dimen/divider_15dp"
        android:layout_marginRight="@dimen/divider_15dp"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:layout_marginStart="@dimen/divider_15dp"
        android:layout_marginEnd="@dimen/divider_15dp" />

</android.support.constraint.ConstraintLayout>