<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_data"
            android:gravity="center"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/textColorBlack"
            android:layout_marginTop="@dimen/divider_10dp"/>

        <TextView
            android:id="@+id/tv_pay_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_data_hint"
            android:gravity="start"
            android:textSize="@dimen/mediums_text_size"
            android:textIsSelectable="true"
            android:textColor="@color/textColorBlack"
            android:layout_marginTop="@dimen/divider_10dp"
            android:padding="@dimen/divider_20dp"/>



        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/drawablePadding_5dp"
            android:layout_marginBottom="@dimen/drawablePadding_5dp">



            <TextView
                android:id="@+id/tv_pay_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/close"
                android:background="@drawable/shape_button_orders"
                android:gravity="center"
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/large_text_size"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_22"/>


        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

    </LinearLayout>



</LinearLayout>