<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/windowBackground">

        <View
            android:layout_width="match_parent"
            android:background="@color/resultColor"
            android:layout_height="@dimen/drawablePadding_5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/divider_15dp"
            android:paddingRight="@dimen/divider_15dp">

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_pick_up_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:text="123"
                android:textColor="@color/textColorBlack"
                android:gravity="center"/>


        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/divider_15dp"
            android:paddingRight="@dimen/divider_15dp"
            android:paddingTop="@dimen/divider_10dp"
            android:paddingBottom="@dimen/divider_10dp">

            <ImageView
                android:id="@+id/iv_pick_up_images"
                android:layout_width="@dimen/divider_80dp"
                android:layout_height="@dimen/divider_80dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_pick_up_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_pick_up_images"
                android:text="DD444545454"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:textColor="@color/buttombarText"/>

            <TextView
                android:id="@+id/tv_pick_up_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pick_up_number"
                android:layout_toRightOf="@+id/iv_pick_up_images"
                android:text="阿西吧"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/buttombarText"/>

            <TextView
                android:id="@+id/tv_pick_up_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pick_up_name"
                android:layout_toRightOf="@+id/iv_pick_up_images"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/buttombarText"/>

            <TextView
                android:id="@+id/tv_pick_up_adders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pick_up_phone"
                android:text=""
                android:layout_toRightOf="@+id/iv_pick_up_images"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/buttombarText"/>




        </RelativeLayout>

        <View
            android:id="@+id/vw_lines"
            style="@style/divider_horizontal2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_15dp"
            android:paddingRight="@dimen/divider_15dp">


            <TextView
                android:id="@+id/tv_pick_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:text=""
                android:textSize="13sp"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_pay_express"
                style="@style/buttonInviteOrangeCircle"
                android:layout_below="@+id/tv_pick_up_count"
                android:textColor="@color/placeholder_top"
                android:layout_marginRight="@dimen/divider_10dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_look_pick_up_adders"
                style="@style/buttonInviteOrangeCircle"
                android:layout_below="@+id/tv_pick_up_count"
                android:textColor="@color/placeholder_top"
                android:visibility="invisible"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>