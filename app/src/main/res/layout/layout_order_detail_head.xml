<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/drawablePadding_5dp"
        android:layout_marginBottom="@dimen/drawablePadding_5dp">

        <TextView
            android:id="@+id/tv_addressee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addressee"
            android:textColor="@color/textColorBlack"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:layout_marginTop="@dimen/drawablePadding_5dp"
            android:textSize="@dimen/medium_text_size"/>

        <TextView
            android:id="@+id/tv_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBlack"
            android:layout_toRightOf="@+id/tv_addressee"
            android:layout_marginLeft="@dimen/drawablePadding_5dp"
            android:layout_marginTop="@dimen/drawablePadding_5dp"
            android:textSize="@dimen/medium_text_size"/>

        <TextView
            android:id="@+id/tv_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBlack"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/drawablePadding_5dp"
            android:textSize="@dimen/medium_text_size"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:layout_below="@+id/tv_addressee"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:layout_marginRight="@dimen/divider_10dp"
            android:textColor="@color/textColorBlack"
            android:layout_marginTop="@dimen/drawablePadding_3dp"
            android:textSize="@dimen/medium_text_size"/>

        <TextView
            android:id="@+id/tv_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_addressee"
            android:layout_toRightOf="@+id/tv_address"
            android:layout_marginLeft="@dimen/drawablePadding_5dp"
            android:layout_marginRight="@dimen/divider_10dp"
            android:layout_marginTop="@dimen/drawablePadding_3dp"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/medium_text_size"/>

    </RelativeLayout>

    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_details_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_numbers"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_order_details_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_type"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_order_details_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/buttombarText"
                android:text=""/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_state"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_order_details_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:text=""
                android:textColor="@color/buttombarText"/>

        </LinearLayout>
        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_count"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_order_details_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/buttombarText"
                android:text="" />

        </LinearLayout>
        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_money"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_order_details_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/buttombarText"
                android:text="" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_time"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_order_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/buttombarText"
                android:text="" />

        </LinearLayout>

       <LinearLayout
           android:id="@+id/layout_balance_deduction"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:visibility="gone">

           <View
               style="@style/divider_horizontal2"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/divider_30dp"
               android:orientation="horizontal"
               android:gravity="center"
               android:paddingLeft="@dimen/divider_10dp"
               android:paddingRight="@dimen/divider_10dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/balance_deduction"
                   android:textColor="@color/buttombarText"
                   android:textSize="@dimen/medium_text_size"/>

               <View
                   style="@style/weight_1"/>

               <TextView
                   android:id="@+id/tv_order_details_balance"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/medium_text_size"
                   android:textColor="@color/buttombarText"
                   android:text="" />

           </LinearLayout>

       </LinearLayout>



    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/cancelColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/agent_content"
            android:gravity="center"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:textColor="@color/windowBackground"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent_name"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/buttombarText"
                android:text="" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent_number"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_agent_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"
                android:text="" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent_phone"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_agent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/medium_text_size"
                android:text="" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/cancelColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/inventory"
            android:gravity="center"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:textColor="@color/windowBackground"/>
    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>