<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.OnePieceAdjustSizeActivity">

    <include layout="@layout/layout_toolbar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/divider_40dp">

                <TextView
                    android:id="@+id/tv_size_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/size"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/large_text_size"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/tv_stocks_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/stocks"
                    android:gravity="center"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/large_text_size"/>


                <TextView
                    android:id="@+id/tv_number_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/adjust_up_number"
                    android:gravity="center"
                    android:textSize="@dimen/large_text_size"
                    android:textColor="@color/textColorBlack" />

            </LinearLayout>

            <View
                style="@style/divider_horizontal2"/>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_one_piece_adjust_size"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>





    <View
        style="@style/divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:id="@+id/tv_adjust_size_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量：0"
            android:textSize="@dimen/ysf_text_size_15"
            android:textColor="@color/textColorBlack"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/divider_10dp"/>

        <View
            style="@style/weight_1"/>

        <TextView
            android:id="@+id/btn_repertory_adjust_cart"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_button_square"
            android:gravity="center"
            android:text="@string/plus_adjust_cart"
            android:textColor="@color/textColorWhite"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>
