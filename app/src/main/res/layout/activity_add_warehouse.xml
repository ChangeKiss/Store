<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.AddWarehouseActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_20dp"
        android:background="@color/windowBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:text="@string/entity_warehouse_name"/>

        <EditText
            android:id="@+id/et_warehouse_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/divider_20dp"
            android:hint="@string/please_input"
            android:textSize="@dimen/medium_text_size"
            android:gravity="center|end"
            />

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_10dp"
        android:background="@color/windowBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/textColorBlack"
            android:text="@string/entity_warehouse_area"/>

        <TextView
            android:id="@+id/tv_select_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/divider_20dp"
            android:hint="@string/please_select"
            android:textSize="@dimen/medium_text_size"
            android:gravity="center|right"
            android:drawableRight="@mipmap/enter_icon"
            android:drawablePadding="@dimen/drawablePadding_5dp"/>

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_20dp"
        android:background="@color/windowBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:text="@string/detail_location"/>

        <EditText
            android:id="@+id/et_detail_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="@dimen/divider_20dp"
            android:hint="@string/please_input"
            android:textSize="@dimen/medium_text_size"
            android:gravity="center|end"
            />

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>


    <Button
        android:id="@+id/btn_warehouse_location_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:background="@drawable/select_button_square"
        android:layout_marginTop="@dimen/divider_30dp"
        android:layout_marginLeft="@dimen/divider_20dp"
        android:layout_marginRight="@dimen/divider_20dp"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/windowBackground"
        android:text="保存"/>

</LinearLayout>
