<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_adjust_size_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_adjust_size_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:text="45454"
                android:textSize="@dimen/mediums_text_size"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_adjust_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_adjust_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediums_text_size"
                android:gravity="center"
                />

        </LinearLayout>




        <TextView
            android:id="@+id/tv_adjust_size_stocks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/mediums_text_size" />


        <LinearLayout
            android:id="@+id/layout_adjust_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_adjust_size_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/minus_icon" />

            <TextView
                android:id="@+id/tv_adjust_size_number"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_adjust_size_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/plus_icon"
                />


        </LinearLayout>



    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>