<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/tv_size_location"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/size"
        android:textColor="@color/buttombarText"
        android:textSize="@dimen/large_text_size"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_stocks_location"
        app:layout_constraintHorizontal_weight="2"/>


    <TextView
        android:id="@+id/tv_stocks_location"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="公司库存"
        android:gravity="center"
        android:textColor="@color/buttombarText"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_size_location"
        app:layout_constraintRight_toLeftOf="@+id/tv_number_location"
        app:layout_constraintHorizontal_weight="1"/>


    <TextView
        android:id="@+id/tv_number_location"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/pick_up_number"
        android:gravity="center"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/buttombarText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_stocks_location"
        app:layout_constraintHorizontal_weight="2"/>

</android.support.constraint.ConstraintLayout>