<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/windowBackground"
        android:paddingLeft="@dimen/divider_15dp"
        android:paddingRight="@dimen/divider_15dp">

        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_balance_detail_time"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textColor="@color/buttombarText"
                android:text="2018-04-18 18:12"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_balance_detail_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/income_money_color"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/medium_text_size"/>

        <TextView
            android:id="@+id/tv_balance_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/buttombarText"
            android:textSize="@dimen/medium_text_size"/>

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>