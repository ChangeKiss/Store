<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.IntroductionActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/layout_splash_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/actionbar_height">

        <ImageView
            android:id="@+id/iv_splash_grey_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/shape_guide_no_select"/>

        <ImageView
            android:id="@+id/iv_splash_grey_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/iv_splash_grey_one"
            android:src="@drawable/shape_guide_no_select"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_splash_grey_two"
            android:src="@drawable/shape_guide_no_select"/>

        <ImageView
            android:id="@+id/iv_splash_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_guide_select"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_splash_skip"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/layout_splash_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_button_orders"
        android:padding="8dp"
        android:text="@string/splash_enter"
        android:visibility="gone"
        android:textColor="@color/textColorWhite"
        android:textSize="15sp"/>
</RelativeLayout>
