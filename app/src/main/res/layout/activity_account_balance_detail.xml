<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.AccountBalanceDetailActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/divider_15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_money_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/large_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:layout_marginRight="@dimen/divider_15dp"
                android:textSize="@dimen/large_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_time_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/large_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:layout_marginRight="@dimen/divider_15dp"
                android:textSize="@dimen/large_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_number_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/large_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_detail_number_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/buttombarText"
                android:layout_marginRight="@dimen/divider_15dp"
                android:textSize="@dimen/large_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:id="@+id/layout_detail_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_detail_status_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/large_text_size"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_detail_status_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:layout_marginRight="@dimen/divider_15dp"
                android:textSize="@dimen/large_text_size"/>

        </LinearLayout>

        <View
            android:id="@+id/vw_account_line"
            style="@style/divider_horizontal2"
            android:visibility="gone"/>



    </LinearLayout>

</LinearLayout>
