<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:background="@color/windowBackground">

        <LinearLayout
            android:id="@+id/layout_name_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_orders_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="黑色70A"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_order_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                />


        </LinearLayout>





        <TextView
            android:id="@+id/tv_commodity_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_toLeftOf="@+id/iv_minus"
            android:gravity="center"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size" />


        <LinearLayout
            android:id="@+id/layout_number_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/minus_icon" />

            <EditText
                android:id="@+id/orders_number"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="0"
                android:background="@color/windowBackground"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginTop="@dimen/drawablePadding_3dp"
                android:layout_marginBottom="@dimen/drawablePadding_3dp"
                android:textSize="@dimen/large_text_size"
                android:maxLength="4" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/plus_icon" />


        </LinearLayout>




    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>