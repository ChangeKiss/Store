<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Store.www.ui.activity.ChangePhoneActivity"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:id="@+id/layout_verify_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/divider_10dp"
        android:paddingLeft="@dimen/divider_15dp"
        android:paddingBottom="@dimen/divider_20dp"
        android:background="@color/windowBackground"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/this_phone"
                android:gravity="center|left"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/mediums_text_size"/>

            <TextView
                android:id="@+id/tv_this_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/mediums_text_size"
                android:textColor="@color/textColorBlack"
                android:text=""
                android:layout_marginLeft="@dimen/divider_30dp"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/divider_15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/mediums_text_size"
                android:text="@string/verify_code"/>


            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/windowBackground"
                android:layout_marginLeft="@dimen/divider_30dp"
                android:textSize="@dimen/mediums_text_size"
                android:hint="@string/please_verify_code"/>

            <View
                style="@style/weight_1"/>

            <Button
                android:id="@+id/btn_change_phone_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/get_verify"
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"
                android:padding="@dimen/drawablePadding_5dp"
                android:layout_marginTop="@dimen/drawablePadding_5dp"
                android:layout_marginBottom="@dimen/drawablePadding_5dp"
                android:background="@drawable/select_button_square"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:background="@drawable/shape_button_orders"
            android:layout_marginLeft="@dimen/drawablePadding_5dp"
            android:layout_marginRight="@dimen/divider_20dp"
            android:textColor="@color/windowBackground"
            android:textSize="@dimen/large_text_size"
            android:text="@string/verify"
            android:layout_marginTop="@dimen/divider_50dp"/>



        <LinearLayout
            android:id="@+id/layout_contact_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/divider_20dp"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="若当前号码已不用或丢失,请联系"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/small_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:text="在线客服"
                android:textColor="@color/placeholder_top"/>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_affirm_alter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/divider_10dp"
        android:paddingLeft="@dimen/divider_15dp"
        android:paddingBottom="@dimen/divider_50dp"
        android:background="@color/windowBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号码"
                android:gravity="center"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/mediums_text_size"/>

            <EditText
                android:id="@+id/et_input_new_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textSize="@dimen/mediums_text_size"
                android:textColor="@color/textColorBlack"
                android:hint="请输入新的手机号码"
                android:inputType="number"
                android:background="@color/windowBackground"
                android:layout_marginLeft="@dimen/divider_30dp"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/divider_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/mediums_text_size"
                android:paddingRight="@dimen/divider_15dp"
                android:text="@string/verify_code"/>


            <EditText
                android:id="@+id/et_alter_phone_verify_code"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/windowBackground"
                android:layout_marginLeft="@dimen/divider_30dp"
                android:textSize="@dimen/mediums_text_size"
                android:inputType="number"
                android:hint="@string/please_verify_code"/>

            <View
                style="@style/weight_1"/>

            <Button
                android:id="@+id/btn_change_new_phone_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/get_verify"
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"
                android:padding="@dimen/drawablePadding_5dp"
                android:layout_marginTop="@dimen/drawablePadding_5dp"
                android:layout_marginBottom="@dimen/drawablePadding_5dp"
                android:background="@drawable/select_button_square"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <Button
            android:id="@+id/btn_affirm_alter_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:background="@drawable/shape_button_orders"
            android:layout_marginLeft="@dimen/drawablePadding_5dp"
            android:layout_marginRight="@dimen/divider_20dp"
            android:textColor="@color/windowBackground"
            android:textSize="@dimen/large_text_size"
            android:text="@string/confirm_alter"
            android:layout_marginTop="@dimen/divider_50dp"/>


    </LinearLayout>

</LinearLayout>
