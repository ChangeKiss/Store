<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.AgentApplyActivity">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/divider_10dp"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginRight="@dimen/divider_10dp"
                android:background="@drawable/shape_text_frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large_text_size"
                        android:layout_marginLeft="@dimen/divider_10dp"/>

                    <View
                        style="@style/weight_1"/>

                    <EditText
                        android:id="@+id/et_agent_QQ"
                        android:layout_width="270dp"
                        android:layout_height="42dp"
                        android:layout_marginRight="@dimen/drawablePadding_5dp"
                        android:background="@color/windowBackground"
                        android:layout_marginTop="2dp"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/textColorBlack"/>

                </LinearLayout>

                <View
                    style="@style/divider_horizontal2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large_text_size"
                        android:layout_marginLeft="@dimen/divider_10dp"/>

                    <View
                        style="@style/weight_1"/>

                    <EditText
                        android:id="@+id/et_agent_wxi"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/drawablePadding_5dp"
                        android:background="@color/windowBackground"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/textColorBlack"/>

                </LinearLayout>

                <View
                    style="@style/divider_horizontal2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微博"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large_text_size"
                        android:layout_marginLeft="@dimen/divider_10dp"/>

                    <View
                        style="@style/weight_1"/>

                    <EditText
                        android:id="@+id/et_agent_wbo"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/drawablePadding_5dp"
                        android:background="@color/windowBackground"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/textColorBlack"/>

                </LinearLayout>

                <View
                    style="@style/divider_horizontal2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large_text_size"
                        android:layout_marginLeft="@dimen/divider_10dp"/>

                    <View
                        style="@style/weight_1"/>

                    <EditText
                        android:id="@+id/et_agent_card"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:maxLength="18"
                        android:layout_marginRight="@dimen/drawablePadding_5dp"
                        android:background="@color/windowBackground"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/textColorBlack"/>

                </LinearLayout>

                <View
                    style="@style/divider_horizontal2"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMAIL"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large_text_size"
                        android:layout_marginLeft="@dimen/divider_10dp"/>

                    <View
                        style="@style/weight_1"/>

                    <EditText
                        android:id="@+id/et_agent_email"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/drawablePadding_5dp"
                        android:background="@color/windowBackground"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/textColorBlack"/>

                </LinearLayout>

                <View
                    style="@style/divider_horizontal2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用感受"
                        android:layout_gravity="center"
                        android:textSize="@dimen/large_text_size"
                        android:layout_marginLeft="@dimen/divider_10dp"/>

                    <View
                        style="@style/weight_1"/>

                    <EditText
                        android:id="@+id/et_agent_feel"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/drawablePadding_5dp"
                        android:layout_marginLeft="@dimen/drawablePadding_5dp"
                        android:background="@color/windowBackground"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/textColorBlack"/>

                </LinearLayout>

                <View
                    style="@style/divider_horizontal2"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/click_plus"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/redColorBackground"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_image"
                android:layout_marginLeft="@dimen/divider_10dp"
                android:layout_marginRight="@dimen/divider_10dp"
                android:layout_marginTop="@dimen/divider_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/divider_10dp">

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:enabled="false"
                    android:background="@drawable/selector_smallbutton_gold"
                    android:textColor="@color/textColorWhite"
                    android:text="@string/apply_agent"/>

            </LinearLayout>


        </LinearLayout>




    </ScrollView>




</LinearLayout>
