<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/divider_10dp"
        android:layout_marginRight="@dimen/divider_10dp">

        <ImageView
            android:id="@+id/stocks_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/jzz_img"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/divider_10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_stocks_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/placeholder_top"
            android:textSize="@dimen/mediums_text_size"/>

        <View
            style="@style/weight_1"/>

        <TextView
            android:id="@+id/tv_stocks_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/divider_10dp"
            android:textSize="@dimen/mediums_text_size"
            android:textColor="@color/textColorBlack"/>

        <ImageView
            android:id="@+id/iv_enter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/enter_icon"
            android:layout_marginRight="@dimen/drawablePadding_5dp"/>

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>