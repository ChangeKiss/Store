<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_order_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.PayActivity">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/Rl_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/divider_10dp">

                    <TextView
                        android:id="@+id/tv_pay_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/drawablePadding_5dp"
                        android:text=""
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/medium_text_size" />


                    <TextView
                        android:id="@+id/tv_pay_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:text=""
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/medium_text_size" />

                    <TextView
                        android:id="@+id/tv_pay_adders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pay_people"
                        android:layout_marginLeft="@dimen/drawablePadding_5dp"
                        android:layout_marginTop="@dimen/drawablePadding_5dp"
                        android:layout_toRightOf="@id/iv_icon"
                        android:text=""
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/medium_text_size" />

                </RelativeLayout>

                <View style="@style/divider_horizontal2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order_numbers"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <TextView
                        android:id="@+id/tv_pay_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <View style="@style/divider_horizontal2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order_type"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <TextView
                        android:id="@+id/tv_pay_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <View style="@style/divider_horizontal2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order_state"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <TextView
                        android:id="@+id/tv_pay_order_state"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <View style="@style/divider_horizontal2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order_count"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <TextView
                        android:id="@+id/tv_pay_order_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <View style="@style/divider_horizontal2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order_money"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <TextView
                        android:id="@+id/tv_pay_order_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <View style="@style/divider_horizontal2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/order_time"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <TextView
                        android:id="@+id/tv_pay_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

                <View style="@style/divider_horizontal2" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_30dp"
                android:background="@color/placeholder_top"
                android:gravity="center|left"
                android:paddingLeft="@dimen/divider_15dp"
                android:paddingRight="@dimen/divider_15dp"
                android:text="@string/pay_content"
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/medium_text_size" />

            <LinearLayout
                android:id="@+id/layout_is_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp">

                    <TextView
                        android:id="@+id/tv_account_ok_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="账户可用余额:0.00"
                        android:textColor="@color/buttombarText"
                        android:textSize="@dimen/medium_text_size" />

                    <View style="@style/weight_1" />

                    <CheckBox
                        android:id="@+id/cb_balance_pay"
                        style="@style/checkBoxStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>


                <View style="@style/divider_horizontal2" />

                <TextView
                    android:id="@+id/tv_gpfd_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp"
                    android:text="还需付款:0.00"
                    android:textColor="@color/buttombarText"
                    android:textSize="@dimen/medium_text_size" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_pay_mode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_30dp"
                android:background="@color/textColorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/divider_15dp"
                android:paddingRight="@dimen/divider_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/pay_mode"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/medium_text_size" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_order_pay_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/medium_text_size" />

                <ImageView
                    android:id="@+id/iv_order_pay_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/grey_xjt_icon" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_plus_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_30dp"
                    android:background="@color/placeholder_top"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/divider_15dp"
                    android:paddingRight="@dimen/divider_15dp"
                    android:text="@string/pay_images"
                    android:textColor="@color/windowBackground"
                    android:textSize="@dimen/medium_text_size" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_pay_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/divider_10dp"
                    android:layout_marginRight="@dimen/divider_10dp"
                    android:layout_marginTop="@dimen/divider_10dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/click_pay_plus"
                    android:textColor="@color/redColorBackground"
                    android:textSize="@dimen/ysf_text_size_13" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <View style="@style/divider_horizontal2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/divider_15dp">


        <TextView
            android:id="@+id/tv_pay_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/redColorBackground"
            android:textSize="@dimen/ysf_text_size_16"
            android:textStyle="bold" />


        <View style="@style/weight_1" />

        <TextView
            android:id="@+id/btn_pay_order"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_button_square"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/pay"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/ysf_text_size_15" />


    </LinearLayout>


</LinearLayout>
