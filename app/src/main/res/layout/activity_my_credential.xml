<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_save_image"
    android:background="@color/windowBackground"
    tools:context="com.Store.www.ui.activity.MyCredentialActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:id="@+id/layout_select_head_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/uploading_head_image"
            android:gravity="center|left"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/redColorBackground"
            android:paddingLeft="@dimen/drawablePadding_5dp"/>

        <View
            style="@style/divider_horizontal2"/>

        <TextView
            android:id="@+id/tv_select_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="@string/select_image"
            android:gravity="center|left"
            android:paddingLeft="@dimen/drawablePadding_5dp"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/textColorBlack"
            android:drawableRight="@mipmap/enter_icon"
            android:paddingRight="@dimen/drawablePadding_5dp"/>


        <ImageView
            android:id="@+id/iv_select_head_image"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/divider_10dp"
            android:layout_marginBottom="@dimen/divider_10dp"/>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:enabled="false"
                android:layout_marginLeft="@dimen/divider_30dp"
                android:layout_marginRight="@dimen/divider_30dp"
                android:background="@drawable/shape_submit_order_button"
                android:textColor="@color/textColorWhite"
                android:text="@string/create_credential"/>

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_credential_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/windowBackground"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_my_credential"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/divider_10dp"
            android:scaleType="fitXY"/>

    </LinearLayout>



</LinearLayout>
