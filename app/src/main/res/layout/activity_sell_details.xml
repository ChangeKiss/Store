<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.SellDetailsActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_sell_details">
        </com.github.jdsjlzx.recyclerview.LRecyclerView>



    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/total_money"
            android:gravity="center"
            android:textSize="@dimen/tab_text_size"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:textColor="@color/textColorBlack"/>

        <TextView
            android:id="@+id/tv_sell_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/tab_text_size"
            android:textColor="@color/redColorBackground"/>

        <View
            style="@style/weight_1"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_sell_pay_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_button_square"
            android:textColor="@color/windowBackground"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/pay_affirm"
            android:gravity="center"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>
