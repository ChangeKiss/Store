<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/divider_10dp">

    <ImageView
        android:id="@+id/iv_photo_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_photo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_cover"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/tab_text_size"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/divider_10dp"/>

    <TextView
        android:id="@+id/tv_photo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_photo_cover"
        android:textSize="@dimen/tab_text_size"
        android:textColor="@color/textColorBlack"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/divider_10dp"/>



</android.support.constraint.ConstraintLayout>