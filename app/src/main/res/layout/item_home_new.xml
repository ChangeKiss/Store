<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/divider_10dp">

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/home_banners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pointSelect="@drawable/shape_indicator_orange"
        app:pointNormal="@drawable/shape_indicator_white"
        app:AutoPlayTime="8000"
        app:clipChildrenLeftRightMargin="@dimen/divider_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_home_hint_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        app:layout_constraintTop_toBottomOf="@+id/home_banners"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/title_text_size"
        android:text="新闻公告"
        android:layout_marginTop="@dimen/drawablePadding_5dp"/>

   <!-- <View
        app:layout_constraintTop_toBottomOf="@+id/tv_home_hint_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/divider_horizontal2"/>-->


</android.support.constraint.ConstraintLayout>