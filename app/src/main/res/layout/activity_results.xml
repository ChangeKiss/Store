<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.ResultsActivity">

    <include layout="@layout/layout_toolbar"/>

    <include layout="@layout/layout_nodata"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:visibility="invisible"
        app:tabIndicatorColor="@color/placeholder_top"
        app:tabSelectedTextColor="@color/placeholder_top"
        app:tabTextColor="#555555"/>

    <View
        android:id="@+id/vi_line"
        android:visibility="invisible"
        style="@style/divider_horizontal2"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ry_results"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

</LinearLayout>
