<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.SellManageActivity">

    <include layout="@layout/layout_toolbar"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        app:tabIndicatorColor="@color/placeholder_top"
        app:tabSelectedTextColor="@color/placeholder_top"
        app:tabTextColor="#555555"/>

    <View
        style="@style/divider_horizontal2"/>

    <include layout="@layout/layout_nodata"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/lr_sell"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>

</LinearLayout>
