<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_look_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_10dp">

        <TextView
            android:id="@+id/tv_month_bonus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/mediums_text_size"
            android:textColor="@color/textColorBlack"
            android:text="201806"
            android:gravity="center"/>

        <View
            style="@style/weight_1"/>

        <TextView
            android:id="@+id/tv_bonus_total_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/mediums_text_size"
            android:text="¥99999"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_click_hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/grey_xjt_icon"
            android:layout_marginLeft="@dimen/drawablePadding_5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_month_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/divider_10dp"
            android:paddingLeft="@dimen/divider_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediums_text_size"
                android:textColor="@color/textColorBlack"
                android:text="个人分红:"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_people_bonus_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/mediums_text_size"
                android:text="¥ 0.00"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/divider_10dp"
            android:paddingLeft="@dimen/divider_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/mediums_text_size"
                android:textColor="@color/textColorBlack"
                android:text="团队分红:"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_team_bonus_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/mediums_text_size"
                android:text="¥ 0.00"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_month_bonus_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/drawablePadding_5dp"
                android:paddingRight="@dimen/drawablePadding_5dp"
                android:textSize="@dimen/mediums_text_size"
                android:textColor="@color/blueTextColor"
                android:text="@string/look_detail"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_10dp"
        android:background="@color/hintColor"/>

</LinearLayout>