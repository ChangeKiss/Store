<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SelectCredentialActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:id="@+id/layout_shape_wear_credential"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_35dp"
        android:background="@color/windowBackground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="塑身衣证书"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:gravity="center"/>

        <View
            style="@style/weight_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter_icon"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"
        android:layout_marginLeft="@dimen/divider_10dp"/>

    <LinearLayout
        android:id="@+id/layout_bar_credential"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_35dp"
        android:background="@color/windowBackground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="内衣证书"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:gravity="center"/>

        <View
            style="@style/weight_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/enter_icon"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>