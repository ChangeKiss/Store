<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.AddLocationActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="@dimen/divider_80dp"
                android:layout_height="match_parent"
                android:text="@string/consignee_name"
                android:gravity="center|left"
                />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textSize="@dimen/ysf_text_size_13"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/divider_80dp"
                android:layout_height="match_parent"
                android:text="@string/consignee_phone"
                android:gravity="center|left" />

            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:maxLength="11"
                android:textSize="@dimen/ysf_text_size_13"
                android:inputType="number"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2" />

        <LinearLayout
            android:id="@+id/layout_add_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/divider_80dp"
                android:layout_height="match_parent"
                android:text="@string/consignee_area"
                android:gravity="center|left" />

            <TextView
                android:id="@+id/tv_user_area"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="@color/redColorBackground"
                android:drawableRight="@mipmap/enter_icon"
                android:layout_marginRight="@dimen/drawablePadding_5dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/divider_80dp"
                android:layout_height="match_parent"
                android:text="@string/consignee_adders"
                android:gravity="center|left" />

            <EditText
                android:id="@+id/et_user_in_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textSize="@dimen/ysf_text_size_13"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/yes_no_default"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/divider_10dp"/>

            <View
                style="@style/weight_1"/>

            <ImageView
                android:id="@+id/iv_default_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/on_kg_icon"
                android:layout_marginRight="@dimen/divider_10dp"/>




        </LinearLayout>

        <View
            style="@style/divider_horizontal2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/btn_save_address"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="@string/save_location"
                android:background="@drawable/shape_button_orders"
                android:gravity="center"
                android:textColor="@color/windowBackground"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
