<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/divider_10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_comment_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:src="@mipmap/default_head"
            app:civ_border_color="#4b4640"
            app:civ_border_width="0dp"/>

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cv_comment_head"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:text="4564654564"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/textColorBlack"/>

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/divider_10dp"
            android:text="1231212"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/redColorBackground"/>

        <TextView
            android:id="@+id/tv_comment_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comment_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/divider_10dp"
            android:layout_marginTop="@dimen/divider_10dp"
            android:text="@string/delete"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/medium_text_size"
        android:text=""
        android:layout_margin="@dimen/divider_10dp"/>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>