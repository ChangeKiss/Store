<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.AlterPasswordActivity">

    <include layout="@layout/layout_toolbar"/>

    <View
        style="@style/divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/windowBackground"
        android:paddingRight="@dimen/divider_10dp"
        android:paddingLeft="@dimen/divider_10dp"
        android:layout_marginTop="@dimen/divider_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/former_password"
            android:layout_marginLeft="@dimen/divider_10dp"/>

        <View
            style="@style/weight_1"/>


        <EditText
            android:id="@+id/et_former_password"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:background="@color/windowBackgroundWhite"
            android:layout_gravity="center"
            android:maxLength="12"
            android:inputType="textPassword"
            android:layout_marginRight="@dimen/divider_10dp"
            android:textSize="@dimen/ysf_text_size_13"/>


    </LinearLayout>

    <View
        style="@style/divider_horizontal2"
        android:layout_marginLeft="@dimen/divider_15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="@dimen/divider_10dp"
        android:background="@color/windowBackground"
        android:paddingLeft="@dimen/divider_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_password"
            android:layout_marginLeft="@dimen/divider_10dp"/>

        <View
            style="@style/weight_1"/>


        <EditText
            android:id="@+id/et_news_password"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:background="@color/windowBackgroundWhite"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/divider_10dp"
            android:maxLength="12"
            android:digits="@string/register_name_digits"
            android:inputType="textPassword"
            android:textSize="@dimen/ysf_text_size_13"/>


    </LinearLayout>

    <View
        style="@style/divider_horizontal2"
        android:layout_marginLeft="@dimen/divider_15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="@dimen/divider_10dp"
        android:paddingLeft="@dimen/divider_10dp"
        android:background="@color/windowBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/password_two"
            android:layout_marginLeft="@dimen/divider_10dp"/>

        <View
            style="@style/weight_1"/>


        <EditText
            android:id="@+id/et_repetition_password"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:background="@color/windowBackgroundWhite"
            android:layout_gravity="center"
            android:maxLength="12"
            android:digits="@string/register_name_digits"
            android:inputType="textPassword"
            android:layout_marginRight="@dimen/divider_10dp"
            android:textSize="@dimen/ysf_text_size_13"/>


    </LinearLayout>

    <View
        style="@style/divider_horizontal2"
        android:layout_marginLeft="@dimen/divider_15dp"/>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="200dp"
        android:layout_height="@dimen/divider_40dp"
        android:layout_marginTop="@dimen/divider_40dp"
        android:layout_gravity="center"
        android:enabled="true"
        android:background="@drawable/selector_smallbutton_gold"
        android:textColor="@color/windowBackground"
        android:textSize="@dimen/large_text_size"
        android:text="@string/change_password"/>




</LinearLayout>
