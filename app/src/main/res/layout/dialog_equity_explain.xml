<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_equity_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_agency_equity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dialog_equity_icon"
            android:textSize="@dimen/price_unit_text_size"
            android:text="招收代理"
            android:gravity="center"
            android:textColor="@color/windowBackground"/>

        <TextView
            android:id="@+id/tv_agency_equity_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/divider_20dp"
            android:paddingLeft="@dimen/divider_25dp"
            android:paddingRight="@dimen/divider_25dp"
            android:paddingBottom="@dimen/divider_15dp"
            android:text="金薇权益"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/mediums_text_size"/>


        <Button
            android:id="@+id/btn_equity_ok_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/equity_ok_button"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/windowBackground"
            android:text="我知道了"
            android:layout_marginBottom="@dimen/divider_17dp"/>


    </LinearLayout>

</LinearLayout>