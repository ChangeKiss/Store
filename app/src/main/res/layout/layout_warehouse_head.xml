<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_yun_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/windowBackground">

        <TextView
            android:id="@+id/tv_agent_yun_warehouse_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_40dp"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/mediums_text_size"
            android:drawableLeft="@mipmap/cloud_entrepot_icon"
            android:drawablePadding="@dimen/divider_10dp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/divider_10dp"/>

        <View
            style="@style/divider_horizontal2"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_wh_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground">

    </android.support.v7.widget.RecyclerView>


    <View
        style="@style/divider_horizontal2"
        android:layout_marginTop="@dimen/divider_10dp"/>

    <LinearLayout
        android:id="@+id/layout_add_warehouse"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:paddingRight="@dimen/divider_10dp"
        android:background="@color/windowBackground"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_user_warehouse_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text=""
            android:drawableLeft="@mipmap/entity_entrepot_icon"
            android:textSize="@dimen/mediums_text_size"
            android:paddingLeft="@dimen/divider_10dp"
            android:drawablePadding="@dimen/divider_10dp"
            android:textColor="@color/textColorBlack"/>

        <View
            style="@style/weight_1"/>



    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>