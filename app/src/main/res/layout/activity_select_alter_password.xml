<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.SelectAlterPasswordActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_alter_login"
            style="@style/personalInformationText"
            android:text="@string/alter_login_password"
            android:textColor="@color/buttombarText"
            android:textSize="@dimen/large_text_size"/>

        <View
            style="@style/divider_horizontal2"
            android:layout_marginLeft="@dimen/divider_15dp"/>

        <TextView
            android:id="@+id/tv_alter_pay"
            style="@style/personalInformationText"
            android:text="@string/alters_pay_password"
            android:visibility="gone"
            android:textColor="@color/buttombarText"
            android:textSize="@dimen/large_text_size"/>

        <View
            android:id="@+id/vw_pay_line"
            style="@style/divider_horizontal2"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/divider_15dp"/>


    </LinearLayout>

</LinearLayout>
