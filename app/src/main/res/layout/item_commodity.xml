<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/rl_ramble">

    <LinearLayout
        android:id="@+id/layout_item_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/windowBackground">

        <ImageView
            android:id="@+id/iv_item_commodity"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBlack"
            android:layout_marginTop="@dimen/divider_10dp"
            android:layout_gravity="center"
            android:text="@string/text_temp"/>


        <TextView
            android:id="@+id/tv_commodity_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666"
            android:textColor="@color/redColorBackground"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textSize="15sp"/>





    </LinearLayout>


</LinearLayout>