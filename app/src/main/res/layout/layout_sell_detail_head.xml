<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/divider_10dp"
        android:background="@color/windowBackground">

        <TextView
            android:id="@+id/tv_sell_details_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text_size"
            android:text="@string/addressee"
            android:textColor="@color/textColorBlack"/>

        <TextView
            android:id="@+id/tv_sell_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sell_details_people"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:text=""/>

        <TextView
            android:id="@+id/tv_sell_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:text=""/>

        <TextView
            android:id="@+id/tv_sell_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sell_details_people"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:layout_marginTop="@dimen/drawablePadding_5dp"
            android:text="@string/address"/>

        <TextView
            android:id="@+id/tv_sell_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sell_details_people"
            android:layout_toRightOf="@+id/tv_sell_address"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/large_text_size"
            android:layout_marginTop="@dimen/drawablePadding_5dp"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:text=""/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/windowBackground">

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center"
                android:text="@string/order_numbers"
                android:textColor="@color/textColorBlack"/>

            <View
                style="@style/weight_1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_sell_details_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/order_type"
                android:textColor="@color/textColorBlack"/>

            <View
                style="@style/weight_1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_tv_sell_details_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/order_state"
                android:textColor="@color/textColorBlack"/>

            <View
                style="@style/weight_1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_sell_details_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/order_count"
                android:textColor="@color/textColorBlack"/>

            <View
                style="@style/weight_1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_sell_details_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/order_money"
                android:textColor="@color/textColorBlack"/>

            <View
                style="@style/weight_1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_sell_details_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/order_time"
                android:textColor="@color/textColorBlack"/>

            <View
                style="@style/weight_1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_sell_details_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/medium_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sell_balance_deduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                style="@style/divider_horizontal2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_30dp"
                android:paddingLeft="@dimen/divider_10dp"
                android:paddingRight="@dimen/divider_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/balance_deduction"
                    android:textColor="@color/textColorBlack"/>

                <View
                    style="@style/weight_1"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_sell_details_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/medium_text_size"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_30dp"
        android:background="@color/cancelColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/agent_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:textColor="@color/windowBackground"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent_name"
                android:textColor="@color/textColorBlack"
                android:textSize="13sp"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent_number"
                android:textColor="@color/textColorBlack"
                android:textSize="13sp"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_agent_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="" />

        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/divider_10dp"
            android:paddingRight="@dimen/divider_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent_phone"
                android:textColor="@color/textColorBlack"
                android:textSize="13sp"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:id="@+id/tv_agent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_30dp"
        android:textColor="@color/windowBackground"
        android:text="@string/inventory"
        android:gravity="left|center"
        android:paddingLeft="@dimen/divider_10dp"
        android:background="@color/cancelColor"/>

</LinearLayout>