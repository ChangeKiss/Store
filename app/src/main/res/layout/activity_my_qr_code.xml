<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Store.www.ui.activity.MyQrCodeActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/placeholder_top">

        <View
            android:layout_width="@dimen/divider_1dp"
            android:layout_height="@dimen/divider_0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_my_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />




        <com.Store.www.base.AutoFitTextView
            android:id="@+id/tv_qr_code_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/windowBackground"
            android:layout_marginTop="@dimen/divider_10dp"
            android:text="扫一扫注册会员"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="invisible"/>

        <View
            android:layout_width="@dimen/divider_1dp"
            android:layout_height="@dimen/divider_0dp"
            android:layout_weight="1"/>



    </LinearLayout>



</LinearLayout>
