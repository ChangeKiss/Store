<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout_sell_pay_affirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_30dp"
            android:orientation="horizontal"
            android:background="@color/cancelColor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/divider_30dp"
                android:textColor="@color/windowBackground"
                android:text="@string/pay_images"
                android:gravity="left|center"
                android:paddingLeft="@dimen/divider_10dp"/>


            <TextView
                android:id="@+id/tv_sell_look_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/click_look"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/windowBackground" />

        </LinearLayout>




        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_sell_image"
            android:layout_marginTop="@dimen/drawablePadding_3dp">

        </android.support.v7.widget.RecyclerView>

        <View
            style="@style/weight_10"/>

    </LinearLayout>

</LinearLayout>