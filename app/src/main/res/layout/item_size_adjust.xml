<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        style="@style/weight_10"/>


    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/divider_10dp"
            android:layout_marginRight="@dimen/divider_10dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_size_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ysf_text_size_15"
                android:text="TZ20180105"
                android:textColor="@color/textColorBlack"
                android:layout_gravity="center"/>

            <View
                style="@style/weight_1"/>


            <TextView
                android:id="@+id/tv_size_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ysf_text_size_15"
                android:text="2018-01-05 10:58:23"
                android:textColor="@color/textColorBlack"
                android:layout_gravity="center"/>


        </LinearLayout>

        <View
            style="@style/divider_horizontal2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/ysf_text_size_13"
                android:text="款号"
                android:gravity="center"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="颜色"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/ysf_text_size_13"
                android:gravity="center"/>

            <View
                style="@style/weight_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="尺码"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/ysf_text_size_13"
                android:gravity="center"/>


            <View
                style="@style/weight_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="数量"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/ysf_text_size_13"
                android:gravity="center"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ry_size_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/divider_10dp"
        android:layout_marginRight="@dimen/divider_10dp"
        android:layout_height="@dimen/dp_40">

        <View
            style="@style/weight_1"/>

        <TextView
            android:id="@+id/tv_size_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/ysf_text_size_15"
            android:textColor="@color/textColorBlack"
            android:gravity="center"
            android:text=""/>

    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>