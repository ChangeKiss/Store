<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.Store.www.ui.fragment.CircleFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/placeholder_top"
        android:paddingTop="@dimen/divider_30dp"
        android:paddingBottom="@dimen/divider_10dp"
        android:paddingLeft="@dimen/divider_10dp"
        android:paddingRight="@dimen/divider_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <View
            style="@style/weight_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微圈"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:layout_marginLeft="@dimen/divider_20dp"
            android:textColor="@color/windowBackground"/>

        <View
            style="@style/weight_1"/>

        <ImageView
            android:id="@+id/iv_publish_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/top_fb_icon"/>


    </LinearLayout>

    <View
        style="@style/divider_horizontal2"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/circle_lR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>

    <include layout="@layout/layout_nodata"/>

</LinearLayout>