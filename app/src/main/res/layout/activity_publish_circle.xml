<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.PublishCircleActivity">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_publish_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/windowBackground"
                android:gravity="top"
                android:hint="@string/comment_write_hint"
                android:textColorHint="@color/textColorGrey"
                android:textSize="@dimen/large_text_size"
                android:layout_marginLeft="@dimen/drawablePadding_5dp"
                android:layout_marginRight="@dimen/drawablePadding_5dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_publish_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/drawablePadding_5dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
