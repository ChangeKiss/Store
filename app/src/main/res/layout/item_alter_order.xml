<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="41dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_40dp"
        android:orientation="horizontal"
        android:background="@color/windowBackground">

        <LinearLayout
            android:id="@+id/layout_alter_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/windowBackground">

            <TextView
                android:id="@+id/tv_alter_order_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="黑色70A"
                android:gravity="center"
                android:textColor="@color/buttombarText"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/tv_alter_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_alter_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                />


        </LinearLayout>



        <TextView
            android:id="@+id/tv_alter_stock_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/buttombarText"
            android:textSize="@dimen/large_text_size"
           />

        <LinearLayout
            android:id="@+id/layout_number_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/windowBackground">


            <ImageView
                android:id="@+id/iv_alter_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/minus_icon"
                android:background="@color/windowBackground"/>

            <EditText
                android:id="@+id/tv_alter_order_number"
                android:layout_width="@dimen/divider_40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/drawablePadding_3dp"
                android:layout_marginBottom="@dimen/drawablePadding_3dp"
                android:text="0"
                android:gravity="center"
                android:inputType="number"
                android:background="@color/windowBackground"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/buttombarText" />

            <ImageView
                android:id="@+id/iv_alter_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/plus_icon"
                android:background="@color/windowBackground"/>


        </LinearLayout>


    </LinearLayout>
    <View
        style="@style/divider_horizontal2"/>

</LinearLayout>