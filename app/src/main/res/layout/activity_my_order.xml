<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Store.www.ui.activity.MyOrderActivity">

    <include layout="@layout/layout_toolbar"/>



        <android.support.design.widget.TabLayout
            android:id="@+id/tab_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_color"
            app:tabIndicatorColor="@color/new_text_color"
            app:tabSelectedTextColor="@color/new_text_color"
            app:tabTextColor="@color/windowBackground"/>

        <View
            style="@style/divider_horizontal2"/>

        <include layout="@layout/layout_nodata"/>

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/ry_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/resultColor"/>

</LinearLayout>
